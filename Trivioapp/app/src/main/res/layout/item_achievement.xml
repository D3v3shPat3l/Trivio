<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@color/pink"
    android:layout_marginBottom="8dp">

    <!-- Icon -->
    <ImageView
        android:id="@+id/iv_achievement_icon"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/app_logo"
        android:contentDescription="@string/icon_representing_the_achievement" />

    <!-- Text Section -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp">

        <!-- Achievement Name -->
        <TextView
            android:id="@+id/tv_achievement_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/achievement_name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:contentDescription="@string/the_name_of_the_achievement" />

        <!-- Achievement Description -->
        <TextView
            android:id="@+id/tv_achievement_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/achievement_description"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginTop="4dp"
            android:contentDescription="@string/description_of_the_achievement" />

        <!-- Achievement Status -->
        <TextView
            android:id="@+id/tv_achievement_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/status"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/the_current_status_of_the_achievement" />
    </LinearLayout>
</LinearLayout>
