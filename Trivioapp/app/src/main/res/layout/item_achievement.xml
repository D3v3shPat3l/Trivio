<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="#F6C1EC"
    android:layout_marginBottom="8dp">

    <!-- Icon -->
    <ImageView
        android:id="@+id/iv_achievement_icon"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/app_logo"
        android:contentDescription="Icon representing the achievement" />

    <!-- Text Section -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp">

        <!-- Achievement Name -->
        <TextView
            android:id="@+id/tv_achievement_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Achievement Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:contentDescription="The name of the achievement" />

        <!-- Achievement Description -->
        <TextView
            android:id="@+id/tv_achievement_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Achievement Description"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginTop="4dp"
            android:contentDescription="Description of the achievement" />

        <!-- Achievement Status -->
        <TextView
            android:id="@+id/tv_achievement_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginTop="8dp"
            android:contentDescription="The current status of the achievement" />
    </LinearLayout>
</LinearLayout>
