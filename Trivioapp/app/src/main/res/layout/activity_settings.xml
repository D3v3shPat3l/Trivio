<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6C1EC">

    <ScrollView
        android:id="@+id/settings_scroll_view"
        android:layout_width="414dp"
        android:layout_height="718dp"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="Scrollable settings page for configuring notifications, music, and sound effects">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Notification Time Picker -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Notification Time"
                android:textColor="#000000"
                android:textSize="18sp"
                android:contentDescription="Label for setting the notification time" />

            <TimePicker
                android:id="@+id/timePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:timePickerMode="spinner"
                android:contentDescription="Time picker for selecting the notification time" />

            <!-- Notification Switch -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Notifications"
                android:textColor="#000000"
                android:textSize="18sp"
                android:contentDescription="Label for enabling or disabling notifications" />

            <Switch
                android:id="@+id/switch_notifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:minHeight="48dp"
                android:text="Enable Notifications"
                android:textColor="#000000"
                android:thumbTint="#FFFFFF"
                android:trackTint="#6A0DAD"
                android:contentDescription="Switch to enable or disable notifications" />

            <!-- Background Music Switch -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Background Music"
                android:textColor="#000000"
                android:textSize="18sp"
                android:contentDescription="Label for enabling or disabling background music" />

            <Switch
                android:id="@+id/switch_music"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:minHeight="48dp"
                android:text="Enable Music"
                android:textColor="#000000"
                android:thumbTint="#FFFFFF"
                android:trackTint="#6A0DAD"
                android:contentDescription="Switch to enable or disable background music" />

            <!-- Sound Effects Switch -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Sound Effects"
                android:textColor="#000000"
                android:textSize="18sp"
                android:contentDescription="Label for enabling or disabling sound effects" />

            <Switch
                android:id="@+id/switch_sound_effects"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:minHeight="48dp"
                android:text="Enable Sound Effects"
                android:textColor="#000000"
                android:thumbTint="#FFFFFF"
                android:trackTint="#6A0DAD"
                android:contentDescription="Switch to enable or disable sound effects" />

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_save"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="#6A0DAD"
                    android:textStyle="bold"
                    android:text="Save"
                    android:textColor="#FFFFFF"
                    android:contentDescription="Button to save settings" />

                <Button
                    android:id="@+id/btn_cancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="#0cc0df"
                    android:textStyle="bold"
                    android:text="Cancel"
                    android:textColor="#FFFFFF"
                    android:contentDescription="Button to cancel settings changes" />
            </LinearLayout>

            <!-- Logout Button -->
            <Button
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:textStyle="bold"
                android:backgroundTint="#FF0000"
                android:text="Logout"
                android:textColor="#FFFFFF"
                android:contentDescription="Button to log out of the app" />

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation View -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu"
        android:background="@android:color/black"
        app:itemIconTint="@android:color/white"
        app:itemTextColor="@android:color/white"
        android:contentDescription="Bottom navigation bar for app navigation" />
</androidx.constraintlayout.widget.ConstraintLayout>
